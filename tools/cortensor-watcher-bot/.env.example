# Cortensor Watcher Bot - Example .env
# Copy this file to .env and fill the values

# Telegram
TELEGRAM_BOT_TOKEN="REPLACE_WITH_BOT_TOKEN"
TELEGRAM_CHAT_ID="REPLACE_WITH_CHAT_ID"

# Network / RPC
RPC_URL="https://your-rpc-url.example"

# Optional: password used for privileged sudo operations. Leave empty if using passwordless sudo.
SUDO_PASSWORD=""

# Optional: Etherscan v2 unified API key for tx monitoring
ETHERSCAN_API_KEY=""

# Optional: Unified API base and chain id (pick the chain id matching your address network)
# Unified base: https://api.etherscan.io/v2/api
# Common chain ids:
# - Ethereum Mainnet: 1
# - Ethereum Sepolia: 11155111
# - Arbitrum One: 42161
# - Arbitrum Nova: 42170
# - Arbitrum Sepolia: 421614
ETHERSCAN_API_BASE="https://api.etherscan.io/v2/api"
ETHERSCAN_CHAIN_ID="421614"

# Optional logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL="INFO"
